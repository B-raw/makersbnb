<h1> Available Properties </h1>

<form method='post' action='/spaces/filter_dates'>
  <label>
    Available from:
    <input type="text" name="available_from" placeholder="Check In">
  </label>
  <label>
    Available to:
    <input type="text" name="available_to" placeholder="Check Out">
  </label>
  <button type="submit">Submit</button>
</form>

<ul id="spaces">
  <% if @spaces %>
    <% @spaces.each do |space| %>
      <li class="space_list_item">
        <a class="space_moreinfo" href="/spaces/<%= space.id %>">
          <p class="space_price"> Â£<%=space.price%> per night </p>
          <p class="space_name"> <%=space.name%> </p>
          <p> <%=space.description%> </p>
          <p> Available <%=space.available_from.strftime("%-d %B %Y")%> to <%=space.available_to.strftime("%-d %B %Y")%> </p>
        </a>
      </li>
    <% end %>
  <% else %>
    <h2>Sorry, no spaces meet those criteria. </h2>
  <% end %>
</ul>
